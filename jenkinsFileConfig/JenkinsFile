pipeline{
    agent any
    triggers{
        cron('')
    }
    stages{
        stage('Tests'){
            steps{
                script {
                    bat 'mvn clean test -Dtest=RunCucumberTest -Dbrowser=Chrome -Dcucumber.options="--tags @CadastroUsuario"'
                }
            }
        }
        stage('Documentation'){
            steps{
                livingDocs featuresDir: '**/target', format: 'ALL', hideScenarioKeyword: true, toc: 'LEFT'
            }
        }
        stage('Cucumber Reports'){
            steps{
                cucumber buildStatus: "UNSTABLE",
                        fileIncludePattern: "**/cucumber-reports/CucumberTestReport.json",
                        jsonReportDirectory: '**/target'
            }
        }
    }

}